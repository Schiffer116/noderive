{
  "name": "noderive",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "pnpx tsx --watch src/index.ts",
    "build": "pnpm ui:build && pnpm api:build",

    "ui:build": "pnpm --dir ./client build",
    "api:build": "pnpm tsc",

    "db:init": "docker run --env-file .env -p 5432:5432 postgres:17",
    "db:seed": "npx drizzle-kit push && npx tsx --env-file .env src/db/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clerk/express": "^1.7.13",
    "@neondatabase/serverless": "^1.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "drizzle-seed": "^0.3.1",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "uploadthing": "^7.7.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "drizzle-kit": "^0.31.4"
  }
}
